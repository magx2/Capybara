package /def

import /capybara/type

def simple(): Int {
    a = 1
    b = 2
   return a + b
}

def re_assigment(): Int {
    a = 1
    b = 2
    a = 3
   return a + b
}

def union_re_assigment(): IntOrNothing {
    x: IntOrNothing = nothing
    x = 1
   return x
}

def test_all() {
	assert (simple() == 3) nothing "def `simple` is not working!"
	assert (re_assigment() == 5) nothing "def `re_assigment` is not working!"
	assert (union_re_assigment() == 1) nothing "def `union_re_assigment` is not working!"
}

